source "https://rubygems.org"

gem "jekyll", "~> 3.9" # ✅ GitHub Pages requires Jekyll 3.9, not 4.x
gem "github-pages", group: :jekyll_plugins # ✅ Required for GitHub Pages

# Plugins
gem "minimal-mistakes-jekyll"
gem "jekyll-sitemap"
gem "jekyll-feed"
gem "jekyll-archives"
gem "jekyll-seo-tag"
gem "jekyll-paginate"
gem "jekyll-paginate-v2"
gem "jekyll-include-cache"

# Utility Gems
gem "csv"
gem "base64"
gem "bigdecimal"
gem "webrick"
gem "faraday-retry"

# Windows-specific gems
gem "wdm", ">= 0.1.0" if Gem.win_platform?
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
